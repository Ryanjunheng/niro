<div>
  <div class="container-fluid" style="padding-top:150px;">
    <% if @event.photos == [] %>
    <%= image_tag(["niro_sample_photo1","niro_sample_photo2","niro_sample_photo3"].sample) %>
    <% else %>

    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="eventbox">
        <div class="item active">
          <%= image_tag @event.photos.first, class:"img-responsive container-fluid", style:"width:100%;"%>
        </div>

        <% @event.photos.each do |photo| %>
        <div class="item">
          <%= image_tag photo, class:"img-responsive" %>
        </div>
        <% end %>
      </div>
      <!-- Controls -->
      <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <% end %>
  </div>

  <!-- contents below sliding banner images -->
  <!-- left of main contents -->
  <div class="container">
    <div class="event-main-content">
      <div class="event-content-left">
        <div class="event-head">
          <div class="event-head-1">
            <h1 class="event-group-item-heading"><%= @event.name %>
            <p class="lead"><%= @event.required_participants %> &middot; <%= @event.city %> - <%= @event.country %></p>
          </div>
          <div class="event-head-2">
            <% if @user.avatar? %>
            <%= link_to "#{image_tag(@user.avatar.thumb, style:"border-radius:50%;")}".html_safe, user_path(@event.host_id)%>
            <% else %>
            <%= link_to "#{image_tag("profile_placeholder.jpg", style:"border-radius:50%; width:50px; height:50px;")}".html_safe, user_path(@event.host_id) %>
            <% end %>
            <p class="lead" style="font-size:1.5em;"><%= @user.full_name %></p>
          </div>
        </div>
        <div>
          <p style="font-size:1.5em;"><%=@event.description%></p>
        </div>
      </div>
  <!-- right of main contents -->
      <div class="event-content-right">
  <!-- event badge column box-->
        <div class="badge-box">
          <% @badge = Badge.find_by(event_id:@event.id) %>
          <% if @badge.present? %>
            <strong class="text-center">Join this mission and earn this badge</strong>
            <%= image_tag(@badge.image, class:"align-center", style:"width:50%; height:auto;") %>
            <p class="text-center"> <%= @badge.name.upcase %></p>
            <% else %>
              <% if @user = current_user %>
                <p class="text-center">Please create a badge for your event to get it published!</p>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-danger align-center" data-toggle="modal" data-target="#myModal">
                  Create Your Event Badge
                </button>
              <% else  %>
              <h2>This mission is not avilable for participation yet</h2>
              <% end %>
          <% end %>

          <!-- Modal -->
          <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <h4 class="modal-title" id="myModalLabel">Modal title</h4>
                </div>
                <div class="modal-body">
                  <%= form_for Badge.new, url: user_event_badges_path(user_id:@user.id, event_id:@event.id), method: :post do |f| %>
                  <%= f.hidden_field :event_id, value:@event.id %>
                  <div class="form-group">
                    <%= f.label "Badge Title" %>
                    <%= f.text_field :name, class:"form-control" %>
                  </div>
                  <div class="form-group">
                    <%= f.label "Badge Description" %>
                    <%= f.text_area :name, class:"form-control" %>
                  </div>
                  <div class="form-group">
                    <%= f.label "Upload Badge Image" %>
                    <%= f.file_field :image, class:"form-control" %>
                  </div>
                </div>
                <div class="modal-footer">
                    <div><%= f.submit "Create Badge", class:"btn btn-danger" %></div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="event-allocated-points">
          <% if @event.required_participants > 15 && @event.required_participants < 50 %>
            <% @event.update(allocated_points: 10)  %>
          <% elsif @event.required_participants >= 50 %>
            <% @event.update(allocated_points: 20)  %>
          <% else %>
            <% @event.update(allocated_points: 5)  %>
          <% end %>
          <strong class="text-center">Gain EXP and Level up! by Completing this mission!</strong>
          <h1 class="text-center" style="font-size:7em; color:gold;"> <%= @event.allocated_points %> <small class="text-center">EXP</small></h1>

        </div>
        <% if @event.host_rewards.present? %>
        <div class="host-rewards-box">

        </div>
        <% end %>
        <div class="booking-form">
          <h2>Happening from: <%=@event.start_date%> to <%= @event.end_date %></h2>
          <hr/>
          <%= render partial: "form" %>
          <p class="text-disabled text-center">You won't be charge yet</[]>
        </div>
      </div>
    </div>
    <!-- google map -->
    <div style='width: 100%; margin-bottom:100px;'>
      <div id="map" style='width: 100%; height: 500px;'></div>
    </div>
  </div>
</div>


<script>
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>
