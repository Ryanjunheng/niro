<%= form_for :session, url: session_path do |form| %>

  <div class="text-field">
    <%= form.label :email, class:"sign-up-form-label"%>
    <%= form.text_field :email, type: 'email', class:"form-control" %>
  </div>

  <div class="password-field">
    <%= form.label :password, class:"sign-up-form-label" %>
    <%= form.password_field :password, class:"form-control" %>
  </div>
  <br>
  <div class="submit-field">
    <%= form.submit 'Log in', id:"sign-up-btn", class:"btn" %>
  </div>

  <div class="other-links">
    
    <%= link_to t(".forgot_password"), new_password_path, class:"forgot-password-link" %>
  </div>
<% end %>
