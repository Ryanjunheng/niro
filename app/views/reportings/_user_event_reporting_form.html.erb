<%= form_for Reporting.new, url: reporting_user_event_path, method: :post do |f| %>
<%= f.hidden_field :reported_id, value:@event.id %>
<%= f.hidden_field :reported_type, value:"Event" %>
<%= f.hidden_field :reporter_id, value:current_user.id %>
<div class="form-group">
  <%= f.text_area :comment, class:"form-control", rows:6 %>
</div>
<div class="form-group">
  <%= f.submit "report user", class:"btn btn-primary pull-right" %>
</div>
<% end %>
