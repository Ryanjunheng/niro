<div class="container" style="padding-top: 150px;">
  <div class="profile-main-content">
     <div class="profile-left col-lg-3 col-md-3">
			 <% if @user.avatar.present? %>
       <div>
         <%= image_tag(@user.avatar, id:"profile-page-profile-image") %>
       </div>
			 <% else %>
			 <div>
				 <%= image_tag("profile_placeholder.jpg", style:"width:100%;") %>
			 </div>
				<% end %>
      <div class="profile-page-about-me">
          <div class="about-me-title">
            <h3>About me</h3>
          </div>
          <div class="about-me-content">
            <strong><span class="glyphicon glyphicon-envelope"></span>&nbsp; Email</strong>
            <ul>
              <li> <%=@user.email%></li>
            </ul>
            <% if @user.country %>
            <strong><span class="glyphicon glyphicon-flag"></span>&nbsp; Where I'm from</strong>
            <ul>
              <li> <%= @user.country %></li>
            </ul>
            <% end %>
            <% if @user == current_user%>
            <button class="align-center btn btn-lg btn-primary" onclick="window.location.href='/users/<%=current_user.id%>/edit'">Edit Profile</button>
            <% end %>
          </div>
      </div>
      </div>
    <div class="profile-right col-lg-9 col-md-9">
      <div>
        <h1>Hey, I'm <%=@user.full_name%>!</h1>
        <h3>Member Since <%=@user.created_at.strftime('%B %Y')%></h3>
      </div>
      <div class="row well text-center">
        <h3 class="blockquote"> <%= @user.intro %> </h3>
      </div>
    </div>
  </div>
</div>

<% if @user.id != current_user.id %>
<%= form_tag "/users/#{ @user.id }/follow", method: :post %>
  <input type=submit value="Follow">
</form>
<% end %>

<% if @user.id != current_user.id %>
<%= form_tag "/users/#{ @user.id }/unfollow", method: :post %>
  <input type=submit value="Unfollow">
</form>
<% end %>

<p>Followers: <%= Following.where(followed_id: @user.id).count %></p>

<% if @user.id == current_user.id %>
<p>Following: <%= Following.where(follower_id: current_user.id).count %></p>
<% else %>
<p>Following: <%= Following.where(follower_id: @user.id).count %></p>
<% end %>
