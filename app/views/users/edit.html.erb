<%= form_for @user do |form| %>

<div>
  <%= form.label :full_name %>
  <%= form.text_field :full_name, type: 'full_name' %>
</div>

<div>
	<%= form.label :email %>
	<%= form.text_field :email, type: 'email' %>
</div>

<div>
  <%= form.label :phone %>
  <%= form.text_field :phone, type: 'phone' %>
</div>

<div>
  <%= form.label "Introduction" %>
  <%= form.text_area :intro, type: 'intro', :cols => "50", :rows => "5" %>
</div>

<div>
  <%= form.label :city %>
  <%= form.text_field :city, type: 'city' %>
</div>

<div>
  <%= form.label :state %>
  <%= form.text_field :state, type: 'state' %>
</div>

<div>
  <%= form.label :country %>
  <%= form.text_field :country, type: 'country' %>
</div>

<div>
  <%= form.label :fb_link %>
  <%= form.text_field :fb_link, type: 'fb_link' %>
</div>

<div>
  <%= form.label :linkedin_link %>
  <%= form.text_field :linkedin_link, type: 'linkedin_link' %>
</div>

<div>
  <%= form.label :twitter_link %>
  <%= form.text_field :twitter_link, type: 'twitter_link' %>
</div>

<div>
	<%= form.label "Upload a profile picture from your computer" %>
	<%= form.file_field :avatar %><br>
</div>

<div>
  <%= form.label "Upload your documents from your computer" %>
  <%= form.file_field :documents, multiple: true %><br>
</div>
<%= form.submit %><br>

<div> 
  <% if current_user.avatar? %>
  <strong>Your Profile Image</strong><br>
  <%= image_tag(current_user.avatar_url) %>
    <label>
  	<p>Please tick and click the delete button to delete</p><br>
    <%= form.check_box :remove_avatar %>
    Remove Profile Picture
    <%= form.submit "Delete" %>
  </label><br>
  <% end %>
<% end %>
</div>

<h3><%= link_to "View Profile", user_path %></h3>