<div class="row">
  <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2" id="reservation">
    <div class="page-header">
      <h3>Participation details</h3>
    </div>

    <div class="page-header">
    </div>
    
    <div class="row">
      <div class="col-sm-6">
        <% if @participation.event.photos.empty? %>
          <%= image_tag "http://placehold.it/770x300&text=no images for event", class:"img-responsive" %>
        <% else %>
          <h2><strong>Pictures</strong></h2><br>
          <div id="myCarousel" class="carousel slide" data-ride="carousel">

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
              <div class="item active">
                <%= image_tag @reservation.event.photos.first %>
              </div>
              <% @reservation.event.photos.shift %>

              <% @reservation.event.photos.each do |photo| %>
              <div class="item">
                <%= image_tag photo %>
              </div>
              <% end %>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        <% end %>

      </div>
      <div class="col-sm-6">
        <div class="hidden-sm hidden-md hidden-lg">
          <br>
        </div>
        <div class="row">
          <div class="col-xs-3">
            <strong>Address:</strong>
          </div>
          <div class="col-xs-9">
            <%= @participation.event.address %><br>
          </div>
        </div><!-- row -->
        <hr>
        <div class="price">

        </div>
      </div>
    </div>

    <div class="row">
      <% if signed_in? && (current_user.id == @participation.user.id) %>
      <hr>
        <div class="pull-left">

        </div>
        <div class="pull-right">

          <%= link_to '<i class="glyphicon glyphicon-trash"></i>&nbsp;&nbsp;Cancel participation'.html_safe, user_event_participation_path(@participation.user_id, @participation.event_id, @participation.id), method: :delete, data: {
              confirm: 'Are you sure you want to cancel this participation?',
              :'confirm-button-text' => 'Yes, cancel it',
              :'cancel-button-text' => 'No, go back',
              :'confirm-button-color' => '#66CD00',
              :'sweet-alert-type' => 'info',
              }, class: "btn btn-danger" %>

        </div>
      <% end %>
    </div><!-- row -->

    <br>
    <br>
  </div>
</div>